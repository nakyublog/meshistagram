<header>
  <div class="row">
    <div class="col-lg-4 col-md-6 ml-auto mr-auto">
      <%= link_to image_tag("meshilogo.jpg"), root_path, id: "logo" %>
    </div>
    <div class="col-lg-4 col-md-6 ml-auto mr-auto">
      <ul>
        <% if signed_in? %>
          <li><%= link_to "ユーザ一覧", users_path %></li>
          <li><%= link_to "プロフィール", current_user %></li>
          <li><%= link_to "ユーザ設定", edit_user_path(current_user) %></li>
        <% else %>
          <li><%= link_to t(".ログイン"), new_session_path(resource_name) %></li>
        <% end %>
      </ul>
    </div>
  </div>
</header>