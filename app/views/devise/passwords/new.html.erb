<div class="row">
  <div class="col-lg-4 col-md-6 ml-auto mr-auto">
    <h2 class="text-center"><%= t('.パスワードの再設定') %></h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= devise_error_messages! %>
      <br>
      <p class="text-left"><%= t('.登録したメールアドレスを入力') %></p>
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, placeholder: 'メールアドレス', class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.submit ('パスワードの再設定リンクを送信する'), class: 'btn btn-primary btn-block btn-lg' %>
      </div>
    <% end %>
    <div class="text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>